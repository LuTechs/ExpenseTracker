@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="expenseList"></div>
<div class="container" ng-app="ExpenseManagerModuleBootstrap" ng-controller="ItemListCtrl">
    <!--Body content-->
    <h2> Expense List</h2>
    <div class="container">
        <div class="col-lg-10">
            <i class="icon-search"></i>
            <input type="search"
                   class="form-control"
                   placeholder="Type Title to search"
                   ng-model="filterOpts.filterText" />
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-success" ng-click="addNewItem()">
                <span class="glyphicon glyphicon-save"></span> Add New Record
            </button>
        </div>
    </div>
    <hr />
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Date
                <th>
                    Amount
                </th>
                <th>Actions</th>
            </tr>
            <tr ng-repeat="expense in expenses">
                <td>{{expense.title}}</td>
                <td>{{expense.date|date:'dd/MMM/yyyy'}}</td>
                <td>{{expense.amount}}</td>
                <td>
                    <button type="button" class="btn btn-danger" aria-label="Left Align" ng-click="deleteItem(expense.id,expense.title)">
                        <span class="fa fa-trash-o" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default" aria-label="Left Align" ng-click="editItem(expense.id,expense)">
                        <span class="fa fa-pencil" aria-hidden="true"></span>
                    </button>

                </td>
            </tr>
        </table>
        <uib-pagination total-items="totalItems" ng-model="pagingOptions.currentPage" max-size="5" class="pagination-sm" boundary-links="true" rotate="false"
                        items-per-page="pagingOptions.pageSize"
                        ng-change="pageChanged()"
                        num-pages="numPages">
        </uib-pagination>
    </div>
</div>

